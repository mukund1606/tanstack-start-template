{
  "name": "tanstack-start-template",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vinxi build",
    "check": "bun format:check && bun lint && bun typecheck",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "dev": "vinxi dev",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx --cache --cache-location node_modules/.cache/eslint/.eslint-cache",
    "lint:fix": "eslint --fix --ext .ts,.tsx,.js,.jsx --cache --cache-location node_modules/.cache/eslint/.eslint-cache",
    "prebuild": "bun check",
    "start": "NODE_ENV=production node --env-file=.env ./node_modules/.bin/vinxi start",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "@t3-oss/env-core": "^0.12.0",
    "@tanstack/react-query": "^5.71.0",
    "@tanstack/react-query-devtools": "^5.71.0",
    "@tanstack/react-router": "^1.114.29",
    "@tanstack/react-router-devtools": "^1.114.29",
    "@tanstack/react-router-with-query": "^1.114.29",
    "@tanstack/react-start": "^1.114.30",
    "@trpc/client": "^11.0.1",
    "@trpc/server": "^11.0.1",
    "@trpc/tanstack-react-query": "^11.0.1",
    "arktype": "^2.1.15",
    "better-auth": "^1.2.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-arktype": "^0.1.2",
    "drizzle-orm": "^1.0.0-beta.1-fd5d1e8",
    "lucide-react": "^0.485.0",
    "mysql2": "^3.14.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.2",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.0.2",
    "tw-animate-css": "^1.2.5",
    "vinxi": "^0.5.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@tailwindcss/postcss": "^4.0.17",
    "@tanstack/eslint-plugin-query": "^5.68.0",
    "@tanstack/eslint-plugin-router": "^1.114.29",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "drizzle-kit": "^1.0.0-beta.1-fd5d1e8",
    "eslint": "^9.23.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.17",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "vite": "^6.2.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "packageManager": "bun@1.2.7"
}
